{
    "name": "bondforge/bondforge-sdk-php",
    "description": "Official PHP SDK for the BondForge API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "BondForge Support",
            "email": "support@bondforge.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.46",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "BondForge\\Sdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BondForge\\Sdk\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
